{
  "compilerOptions": {
    "lib": [
      "es2019",
      "DOM",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string"
    ],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "target": "es5"
  },
  "include": [
    "next-env.d.ts",
    "postgres.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "db-connect-example-node.mjs"
  ],
  "exclude": ["node_modules"]
}
